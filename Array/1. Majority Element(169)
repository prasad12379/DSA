class Solution {
public:
    int majorityElement(vector<int>& nums) {
        map<int , int> mp;

        for(int i=0 ; i<nums.size() ; i++){
            if(mp.find(nums[i])!=mp.end()){
                auto it=mp.find(nums[i]);
                it->second+=1;
            }
            else{
                mp.insert({nums[i] , 1});
            }
        }

        int mj_ele=nums.size()/2;

        for(auto& it : mp){
            if(it.second>mj_ele) return it.first;
        }
        return nums.size()/2;
    }
};
